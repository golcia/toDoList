<Page
    x:Class="toDoApp.LogInPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:toDoApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#eaeaea">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.4*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel  Margin="0,40,0,0" Grid.Column="0" Grid.Row="1"  HorizontalAlignment="Center" Width="250">
            <TextBlock x:ConnectionId='7'  x:Name="logInTextBox" x:Uid="logInTextBox" FontFamily="Georgia"></TextBlock>
            <TextBox x:ConnectionId='8' x:Name="usernameTextBox"/>
        </StackPanel>

        <StackPanel Margin="0,0,0,0" Grid.Column="0" Grid.Row="2">
            <Button x:ConnectionId='6'                            x:Name="loginButton" FontFamily="Georgia" x:Uid="loginButton" Background="#ff7381" HorizontalAlignment="Center" />          
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="3">
            <Button x:ConnectionId='5'                            x:Name="aboutButton" FontFamily="Georgia" x:Uid="aboutButton" Background="#ffd9c9" Margin="0,50,0,0" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
        </StackPanel>


    </Grid>
</Page>

